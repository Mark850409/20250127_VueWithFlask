FROM node:18-alpine

WORKDIR /app

# 複製 package.json 和 package-lock.json
COPY ./frontend/package*.json ./

# 安裝依賴
RUN npm install
RUN npm install -g vite serve  # 安裝 serve 以供 production 使用

# 複製源代碼
COPY ./frontend .

# 設置環境變量
ENV NODE_ENV=production
ENV PATH /app/node_modules/.bin:$PATH

# 編譯 Vue 應用
RUN npm run build

# 暴露端口
EXPOSE 3000

# 啟動服務
CMD ["serve", "-s", "dist", "-l", "3000"]
