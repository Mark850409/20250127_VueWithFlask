FROM python:3.9-slim

WORKDIR /usr/src/app

# 安裝系統依賴
RUN apt-get update && apt-get install -y \
    git \
    dos2unix \
    && rm -rf /var/lib/apt/lists/*

# 確保配置目錄存在
RUN mkdir -p /usr/src/app/config

# 複製 requirements.txt
COPY ./backend/requirements.txt .

# 安裝依賴
RUN pip install --no-cache-dir -r requirements.txt

# 然後複製其餘的源代碼
COPY ./backend .

# 設置環境變量
ARG FIREBASE_CONFIG_BASE64
ENV FLASK_APP=app.py
ENV PYTHONPATH=/usr/src/app
ENV FLASK_ENV=production

# 解碼 Base64 內容並存成 JSON
RUN echo "$FIREBASE_CONFIG_BASE64" | base64 -d > /usr/src/app/config/firebase-config.json

# 設置環境變數（如果你的應用程式需要它）
ENV FIREBASE_CONFIG=/usr/src/app/config/firebase-config.json

# 暴露端口
EXPOSE 5000

# 啟動服務
CMD ["python", "app.py"]